{
  "name": "glidelite",
  "author": "Sander Veldhuis",
  "homepage": "https://sanderveldhuis.nl/",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Builds secure web applications including API, database, and worker support",
  "keywords": [
    "GlideLite",
    "compiler",
    "web",
    "webapp",
    "website",
    "webpage",
    "JavaScript",
    "TypeScript"
  ],
  "bugs": {
    "url": "https://github.com/sanderveldhuis/glidelite/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanderveldhuis/glidelite.git"
  },
  "main": "./lib/glidelite.js",
  "typings": "./lib/glidelite.d.ts",
  "bin": {
    "glc": "./bin/glc"
  },
  "files": [
    "bin",
    "doc",
    "lib",
    "LICENSE",
    "README.md",
    "SECURITY.md"
  ],
  "scripts": {
    "test": "nyc mocha",
    "build": "npm run build:compiler && npm run build:tests",
    "build:compiler": "tsc -b --emitDeclarationOnly false src",
    "build:tests": "tsc -b --emitDeclarationOnly false tests",
    "clean": "node -e \"require('fs').rmSync('built', { recursive: true, force: true })\"",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 .",
    "knip": "knip --tags=+internal,-knipignore --exclude=duplicates,enumMembers",
    "format": "dprint fmt",
    "dist": "npm run format && npm run lint && npm run knip && npm run clean && npm run build && npm run test && npm run dist:clean && npm run dist:copy",
    "dist:clean": "node -e \"require('fs').rmSync('lib', { recursive: true, force: true })\"",
    "dist:copy": "node -e \"require('fs').mkdirSync('lib')\" && cpx \"built/src/compiler/**/*.js\" lib && cpx \"built/src/glidelite/**/*.{js,ts}\" lib"
  },
  "dependencies": {
    "@tsconfig/node-lts": "^22.0.2",
    "@types/node": "latest",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "chai": "^6.2.0",
    "cpx2": "^8.0.0",
    "dprint": "^0.50.2",
    "eslint": "^9.36.0",
    "globals": "^16.3.0",
    "knip": "^5.64.1",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "ts-sinon": "^2.0.2",
    "typescript-eslint": "^8.44.1"
  }
}
